<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="First / Last Name"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <ImageView
        android:id="@+id/profile_info"
        android:layout_width="319dp"
        android:layout_height="148dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:srcCompat="@drawable/rounded_rectangle" />


    <LinearLayout
        android:id="@+id/geoloc_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_info">

        <Switch
            android:id="@+id/geo_location"
            android:layout_width="56dp"
            android:layout_height="31dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/geo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Geo-Location Services"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Phone:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_info"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/profile_info"
        app:layout_constraintTop_toTopOf="@+id/profile_info" />

    <TextView
        android:id="@+id/number"
        android:layout_width="89dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="xxx-xxx-xxx"
        app:layout_constraintEnd_toEndOf="@+id/profile_info"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/profile_info"
        app:layout_constraintTop_toBottomOf="@+id/phone_title" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_info"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="@+id/profile_info"
        app:layout_constraintTop_toBottomOf="@+id/number" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="name@domain.ca"
        app:layout_constraintEnd_toEndOf="@+id/profile_info"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="@+id/profile_info"
        app:layout_constraintTop_toBottomOf="@+id/email_title" />

    <ImageButton
        android:id="@+id/user_edit_profile"
        style="@android:style/Widget.ImageButton"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:background="@drawable/rect_rounded_button"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_edit" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:background="@drawable/rounded_image_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background" />

        <View
            android:id="@+id/profile_picture"
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:background="@drawable/rounded_image_border" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>